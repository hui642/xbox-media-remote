<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cm="using:Caliburn.Micro">

    <DataTemplate x:Key="DefaultTemplate">
        <ContentControl cm:View.Model="{Binding}" />
    </DataTemplate>

    <DataTemplate x:Key="StorageGroupTemplate">
        <Border Background="{ThemeResource SidebarBackgroundBrush}" RequestedTheme="Dark" Padding="10">
            <StackPanel>
                <TextBlock Text="{Binding Group.Title}" FontSize="20" FontWeight="SemiBold" TextLineBounds="Full" />
                <TextBlock Text="{Binding Group.Description}" Style="{StaticResource BodyTextBlockStyle}" TextLineBounds="Full" />
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>
